<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



       <LinearLayout
           android:id="@+id/screen_order"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <ImageView
               android:id="@+id/explore"
               android:layout_width="match_parent"
               android:layout_height="72.5dp"
               android:layout_alignParentStart="true"
               app:srcCompat="@drawable/flipboard_explore"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:paddingLeft="15dp"
                android:paddingRight="15dp">

                <SearchView
                    android:id="@+id/search_view_bar"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:background="@color/cardview_shadow_start_color"
                    android:iconifiedByDefault="false"
                    android:queryHint="@string/search_flipboard" />

           </RelativeLayout>

     <!--  <EditText
               android:id="@+id/search_bar"
               android:layout_width="206dp"
               android:layout_height="wrap_content"
               android:layout_toStartOf="@+id/explore"/> -->




           <ImageView
               android:id="@+id/main_featured"
               android:layout_width="415dp"
               android:layout_height="237dp"
               app:srcCompat="@drawable/flipboard_main_featured" />

           <ImageView
               android:layout_width="match_parent"
               android:layout_height="35dp"
               app:srcCompat="@drawable/flipboard_United_States"/>
           <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="2"
                android:paddingRight="8dp"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="203dp"
                    android:layout_height="190dp"
                    android:paddingLeft="8dp"
                    app:srcCompat="@drawable/flipboard_coronavirus"/>
                <ImageView
                    android:layout_width="203dp"
                    android:layout_height="190dp"
                    android:paddingLeft="8dp"
                    app:srcCompat="@drawable/flipboard_america_fights"/>
               <ImageView
                   android:layout_width="203dp"
                   android:layout_height="190dp"
                   android:paddingLeft="8dp"
                   app:srcCompat="@drawable/flipboard_how_to_protest"/>
               <ImageView
                   android:layout_width="203dp"
                   android:layout_height="187dp"
                   android:paddingLeft="8dp"
                   app:srcCompat="@drawable/flipboard_black_business"/>

           </GridLayout>

       </LinearLayout>


</RelativeLayout>